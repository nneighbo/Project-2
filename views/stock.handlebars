<div class="container-fluid">
    <div class="row px-5 pt-2">
        <div class="col-sm-2"></div>
        <div class="col-sm-2">
            <div id="sideContainer">
                <div class="input-group mb-3" id="searchBar">
                    <input type="text" class="form-control" placeholder="Search" autocomplete="none">
                    <div class="input-group-append" id="searchButton">
                        <button id="navSearchButton" class="btn btn-outline-secondary" type="button" id="searchBorder">
                            <i class="material-icons">search</i>
                        </button>
                    </div>
                </div>
                <div class="navMenuHeader">
                    <p>PAGES</p>
                </div>

                <div class="nav flex-column nav-pills">
                    <a class="nav-link" href="/">Current Stocks</a>
                    <a class="nav-link" href="/news">News Articles</a>
                    <a class="nav-link" href="/dashboard">My Dashboard</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 pl-5" id="stockSide">
            <div id="pageHeadRow" class="row">
                <h1>
                    <span id="stockName">Ford Motor Company</span>
                </h1>
                <div id="navDropDown">
                    <p>Log in or Register</p>
                </div>
            </div>
            <div id="logIn">
                <div>
                    <a id="loginLink" href="/login">Login</a>
                    <a id="createAccountLink" href="/createAccount">Create Account</a>
                    <a id="logoutLink" href="/logout">Logout</a>
                </div>
            </div>
            <div class="singleStockHolder">
                <div class="singleStock">
                    <div id="stockHeader">
                        <p class="stockHead">NRES: F</p>
                        <p id="#upDown">
                            <i id="#upDownIcon" class="material-icons">arrow_upward</i> Up by $3.21</p>
                    </div>
                    <div class="stockDivider"></div>
                    <div>
                        <canvas id="bigChart" width="500" height="135"></canvas>
                    </div>
                </div>
                <div id="stockInfo">
                    <p>Open:
                        <span id="stockOpen"></span>
                    </p>
                    <p>High:
                        <span id="stockHigh"></span>
                    </p>
                    <p>Low:
                        <span id="stockLow"></span>
                    </p>
                </div>
                <div id="stockFrame" class="row">
                    <div class="col-sm-3 stockToggle" data-toggle="day">
                        <p>DAY</p>
                    </div>
                    <div class="col-sm-3 stockToggle" data-toggle="week">
                        <p>WEEK</p>
                    </div>
                    <div class="col-sm-3 stockToggle" data-toggle="month">
                        <p>MONTH</p>
                    </div>
                    <div class="col-sm-3 stockToggle" data-toggle="year">
                        <p>YEAR</p>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-sm-2"></div>
    </div>
    <div class="push"></div>
</div>

<footer>
    <p>Stocks and Info</p>
</footer>